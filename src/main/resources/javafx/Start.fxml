<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" prefHeight="600.0" prefWidth="600.0"
      style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/22"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.masterdash5.unoproject.controller.StartController">

    <!-- Title -->
    <Text text="UNO!" fill="#ecd407" style="-fx-font-size: 36;" />

    <!-- Player vs Player Button -->
    <Button fx:id="playervsplayer" text="Player vs Player"
            prefWidth="200.0" prefHeight="50.0"
            style="-fx-background-color: black; -fx-text-fill: white; -fx-border-color: white; -fx-border-width: 2;" />

    <!-- Player vs Bot Button -->
    <Button fx:id="playervsbot" text="Player vs Bot"
            prefWidth="200.0" prefHeight="50.0"
            style="-fx-background-color: gray; -fx-text-fill: lightgray; -fx-border-color: white; -fx-border-width: 2;" />

    <!-- Quit Button -->
    <Button fx:id="Quitbtn" text="Quit"
            prefWidth="150.0" prefHeight="40.0"
            style="-fx-background-color: black; -fx-text-fill: white; -fx-border-color: white; -fx-border-width: 2;" />

</VBox>
